<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:text="Select dept"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner1"
        android:layout_marginTop="-31dp"
        android:layout_marginRight="-41dp"
        android:layout_toLeftOf="@+id/spinner1"
        android:text="Course Code"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFCFC"
        android:textColorHighlight="#FFFCFC"
        android:textColorHint="#FFFCFC"
        android:textColorLink="#FFFCFC"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonsubmit"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DateImageButton"
        android:layout_alignParentRight="true"
        android:layout_marginTop="22dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#9AD15B"
        android:text="Add Attendance"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerSE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinneryear"
        android:layout_alignLeft="@+id/spinneryear"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:backgroundTint="#FEFEFE" />

    <Spinner
        android:id="@+id/spinneryear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner1"
        android:layout_alignLeft="@+id/spinner1"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-1dp"
        android:backgroundTint="#FEFEFE" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="65dp"
        android:layout_toRightOf="@+id/textView1"
        android:backgroundTint="#FEFEFE" />

    <ImageButton
        android:id="@+id/DateImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerSE"
        android:layout_alignLeft="@+id/spinnerSE"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="11dp"
        android:cropToPadding="true"
        android:src="@drawable/calendarn"
        android:tint="#FFFFFF" />

    <EditText
        android:id="@+id/DateEditText"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignTop="@+id/DateImageButton"
        android:layout_marginTop="6dp"
        android:layout_marginRight="1dp"
        android:layout_toLeftOf="@+id/spinnerSE"
        android:background="#ffffff"
        android:editable="false"
        android:ems="10">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignTop="@+id/spinnerSE"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="9dp"
        android:text="Subject Code"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFEFE"
        android:textColorHighlight="#FFFEFE"
        android:textColorHint="#FFFEFE"
        android:textColorLink="#FFFEFE"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignTop="@+id/spinnerSE"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="-27dp"
        android:text="Part"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFEFE"
        android:textColorHighlight="#FFFEFE"
        android:textColorHint="#FFFEFE"
        android:textColorLink="#FFFEFE"
        android:textStyle="bold" />

    <Button
        android:id="@+id/viewTotalAttendanceButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="77dp"
        android:background="@drawable/roundedbutton"
        android:text="View Total Attendance"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/viewAttendancebutton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="35dp"
        android:background="@drawable/roundedbutton"
        android:text="View Attendance"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonlogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/viewTotalAttendanceButton"
        android:layout_alignParentBottom="true"
        android:background="@drawable/roundedbutton"
        android:text="Log Out"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>